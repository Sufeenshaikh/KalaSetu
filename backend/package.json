{
  "name": "kalasetu-backend",
  "version": "1.0.0",
  "description": "Backend API for KalaSetu - Artisan Marketplace Platform",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest",
    "firebase:login:ci": "npx firebase-tools login:ci",
    "firebase:ci-deploy": "npx firebase-tools deploy --only firestore:rules,storage:rules --project kalasetu-e55c4 --token $FIREBASE_TOKEN",
    "firebase:deploy:interactive": "npx firebase-tools deploy --only firestore:rules,storage:rules --project kalasetu-e55c4",
    "build:docker": "docker build -t gcr.io/kalasetu-e55c4/kalasetu-backend .",
    "deploy:cloud-run": "gcloud run deploy kalasetu-backend --source . --region us-central1 --allow-unauthenticated"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.0.0",
    "@google/generative-ai": "^0.24.1",
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "@sendgrid/mail": "^7.7.0",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.13.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.0",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.0.0",
    "joi": "^18.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "stripe": "^14.0.0",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  ,
    "firebase-tools": "^11.12.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
